= form_for @property_asset do |f|
  -if @property_asset.errors.any?
    #error_explanation
      %h2= "#{pluralize(@property_asset.errors.count, "error")} prohibited this property_asset from being saved:"
      %ul
        - @property_asset.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :visibility
    = f.text_field :visibility
  .actions
    = f.submit 'Save'
