= form_for @rentbill do |f|
  - if @rentbill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rentbill.errors.count, "error")} prohibited this manager from being saved:"
      %ul
        - @rentbill.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bill_date
    = f.date_select :bill_date
  .field
    = f.label :tenant_id, 'Tenant'
    = f.collection_select(:tenant_id, Tenant.all, :id, :lastname)
  .field
    = f.fields_for :rentbill_line_items do |builder| 
      = render "rentbill_line_item_fields", :f => builder
  .field
    = link_to_add_fields "Add Line Item", f, :rentbill_line_items
    
  .actions
    = f.submit 'Save'
