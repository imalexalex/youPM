%h1 Private Messages

- if notice
  %p{:id=>"notice"}= notice 

%table
  %tr
    %th From
    %th To 
    %th Date
    %th Subject

  - @messages.each do |message|
    %tr
      %td= message.sender
      %td= message.receiver
      %td= message.sentdate
      %td= message.subject
      %td= link_to 'Show', message
      %td= link_to 'Reply', ''
      %td= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Message', new_message_path
