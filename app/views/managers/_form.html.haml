= form_for @manager do |f|
  -if @manager.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manager.errors.count, "error")} prohibited this manager from being saved:"
      %ul
        - @manager.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :passwordhash
    = f.text_field :passwordhash
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :phonenumber
    = f.text_field :phonenumber
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :streetaddress
    = f.text_field :streetaddress
  .actions
    = f.submit 'Save'
