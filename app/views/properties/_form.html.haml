= form_for @property do |f|
  -if @property.errors.any?
    #error_explanation
      %h2= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
      %ul
        - @property.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :headline
    = f.text_area :headline
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :streetaddress
    = f.text_field :streetaddress
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :type
    = f.number_field :type
  .field
    = f.label :year_built
    = f.text_field :year_built
  .field
    = f.label :stories
    = f.text_field :stories
  .actions
    = f.submit 'Save'
